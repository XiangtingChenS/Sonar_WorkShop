    function getDataByDate() {
        $.ajax({
            type: 'post',
            url: '@Url.Action("../Order/GetOrderItemRecordsByDay")',
            data: {
                StoreID: cookie,
                day: $('#selectDay_OrderItemRecord').val()
            },
