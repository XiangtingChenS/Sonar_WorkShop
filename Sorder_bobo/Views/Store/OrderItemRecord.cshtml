    function getDataByYear() {
         $.ajax({
            type: 'post',
            url: '@Url.Action("../Order/GetOrderItemRecordsByYear")',
            data: {
                StoreID: cookie,
                year: $('#selectYear_OrderItemRecord').val()+"-"+"11" //TODO 暫時用這樣(後面要接月份 後端才會認為是日期)
