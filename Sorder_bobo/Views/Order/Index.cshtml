        function StatusConverToText(productStatus) {
            //上架btn ,  已售完btn , 已進貨btn+通知下單顧客+下架
            if (productStatus == 0) {
                return {
                    "statusName": '新品項，尚未上架',
                    "onSelf": '',
                    "oversell": 'hide',
                    "threeGroup":'hide'};
            }

            if (productStatus == 1) {
                return {
                    "statusName": '販售中',
                    "onSelf": 'hide',
                    "oversell": '',
                    "threeGroup": 'hide'
                };
            }
            if (productStatus == 2) {
                return {
                    "statusName": '已售完',
                    "onSelf": 'hide',
                    "oversell": 'hide',
                    "threeGroup": ''
                };
            }
            if (productStatus == 3) {
                return {
                    "statusName": '已下架',
                    "onSelf": '',
                    "oversell": 'hide',
                    "threeGroup": 'hide'
                };
            }
        }
